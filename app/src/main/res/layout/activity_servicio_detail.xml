<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"


    tools:context=".Activities.ServicioDetailActivity">




    <TextView
        android:id="@+id/tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Salida - Terminado"
        android:layout_marginTop="10dp"
        android:background="#5555ff"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/horafecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="13/02/2020 15:00"
        android:background="#cccccc"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/sede"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SEDE : Encarnación"
        android:background="#eeeeee"
        android:textColor="#000000"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/proveedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="PROVEEDOR : Elitaxi"
        android:background="#eeeeee"
        android:textColor="#000000"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/conductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CONDUCTOR : Huaman Angeles Carlos Enrique"
        android:background="#eeeeee"
        android:textColor="#000000"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/Vehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="VEHÍCULO : Tesla Serie 1"
        android:background="#eeeeee"
        android:textColor="#000000"
        android:textSize="15dp"

        android:paddingBottom="10dp"
        />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Seleccione un incidente: "
        android:paddingTop="15dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:textSize="15dp"

        android:paddingBottom="10dp"
        />



    <Spinner

        android:id="@+id/myspinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:background="#FFFFFF"
        android:hint="Descripcion de la incidencia"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:maxLength="100"
        android:inputType="textMultiLine"
        />


    <Button
        android:id="@+id/CancelarServicio"
        android:layout_width="match_parent"
        android:imeOptions="actionDone"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:text="Cancelar servicio"
        android:layout_marginTop="20dp"

        />



</LinearLayout>