<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Salida - Terminado"
        android:layout_marginTop="10dp"
        android:background="#5555ff"
        android:textColor="#ffffff"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/horafecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="13/02/2020 15:00"
        android:background="#cccccc"
        android:textColor="#000000"
        android:textSize="25dp"
        />
    <TextView
        android:id="@+id/sede"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SEDE : Encarnación"
        android:background="#eeeeee"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/proveedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="PROVEEDOR : Elitaxi"
        android:background="#eeeeee"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/conductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CONDUCTOR : Huaman Angeles Carlos Enrique"
        android:background="#eeeeee"
        android:textColor="#000000"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/Vehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="VEHÍCULO : Tesla Serie 1"
        android:background="#eeeeee"
        android:textColor="#000000"
        android:textSize="20dp"
        />





</LinearLayout>